<p id="notice"><%= notice %></p>

<h3>Users</h3>

<table class="table">
  <thead  class="table-dark">
    <tr>
      <th>Username</th>
      <th>Admin</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', home_index_path, class: "btn btn-primary" %>
<%= link_to 'New User', new_user_path, class: "btn btn-secondary" %>
