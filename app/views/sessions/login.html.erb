<div class="col-md-8">
  <h3>Login</h3>
  <%= form_tag '/login' do %>
  <div class="col-md-8">
    <div class='mb3'>
        Username:
      <div class='row'>
        <div class='col'>
          <%= text_field_tag :username, class:"form-control" %>
        </div>
      </div>
    </div>

    <div class='mb3'>
        Password:
      <div class='row'>
        <div class='col'>
          <%= password_field_tag :password, class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="mb3">
      <div class="actions">
        <%= submit_tag 'Log in', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
